{
  "name": "electron-tail",
  "productName": "Electron Tail",
  "version": "0.0.0",
  "repository": "https://github.com/cblanks/electron-tail",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "icons": "./node_modules/.bin/electron-icon-builder --input=src/assets/app.jpeg --output=src/assets",
    "start": "concurrently -k \"ng serve\" \"npm:electron\"",
    "build": "ng build --base-href ./ --prod=true",
    "package:base": "./node_modules/.bin/electron-packager . --overwrite --arch=x64 --prune=true --version-string.CompanyName=\"Chris Blanks\" --version-string.FileDescription=\"Log tailer\" --version-string.ProductName=\"$npm_package_productName\"",
    "package:macos": "npm run package:base -- --out=dist/macos --platform=darwin --icon=src/assets/icons/mac/icon.icns",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prebuild": "npm run icons",
    "prestart": "npm run icons",
    "preelectron": "tsc preload.ts && tsc main.ts",
    "electron": "wait-on http://localhost:4200/ && electron ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.11",
    "@angular/common": "~9.1.11",
    "@angular/compiler": "~9.1.11",
    "@angular/core": "~10.2.5",
    "@angular/forms": "~9.1.11",
    "@angular/platform-browser": "~9.1.11",
    "@angular/platform-browser-dynamic": "~9.1.11",
    "@angular/router": "~9.1.11",
    "bootstrap": "^4.5.0",
    "electron-window-state": "^5.0.3",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.9",
    "@angular/cli": "~9.1.9",
    "@angular/compiler-cli": "~9.1.11",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "concurrently": "^5.2.0",
    "electron": "^9.0.4",
    "electron-icon-builder": "^1.0.2",
    "electron-packager": "^14.2.1",
    "electron-reload": "^1.5.0",
    "install": "^0.13.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "npm": "^6.14.5",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3",
    "wait-on": "^5.0.1"
  }
}
